<div class="max-w-4xl mx-auto p-6 bg-gray-100 rounded shadow-md mt-10">
  <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @course.title %></h1>

  <p class="text-lg text-gray-600 mb-2">
    <strong class="text-gray-800">Description:</strong> <%= @course.description %>
  </p>
  <p class="text-lg text-gray-600 mb-2">
    <strong class="text-gray-800">Price:</strong> <%= number_to_currency(@course.price) %>
  </p>
  <p class="text-lg text-gray-600 mb-4">
    <strong class="text-gray-800">Created by:</strong> <%= @course.user.email %>
  </p>

  <% if current_user.subscriber? %>
    <% if current_user.subscribed_courses.include?(@course) %>
      <p class="text-green-700 font-medium bg-green-100 rounded p-3">
        You are already subscribed to this course.
      </p>
    <% else %>
      <%= button_to "Subscribe to this Course", subscribe_course_path(@course), method: :post, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  <% elsif current_user.creator? %>
    <p class="text-blue-700 font-medium bg-blue-100 rounded p-3">
      You are the creator of this course.
    </p>
  <% end %>

  <div class="mt-6">
    <%= link_to "Back to courses", root_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
